{
  "manifest_version": 3,

  "name": "Timer for Google Meets",
  "description": "Timer for Google Meets",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "timerIcon16.png",
      "24": "timerIcon24.png",
      "32": "timerIcon32.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
